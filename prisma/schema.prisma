generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  password     String
  bio          String   @default("Welcome to my profile")
  profile_icon String   @default("../imgs/default-avatar-profile-icon-of-social-media-user-in-clipart-style-vector.jpg")
  date_joined  DateTime @default(now())
  user_posts   posts[]
}

model posts {
  id          Int      @id @default(autoincrement())
  description String
  userid      Int
  user        users    @relation(fields: [userid], references: [id], onDelete: Cascade, onUpdate: NoAction)
  time_posted DateTime @default(now())
}
